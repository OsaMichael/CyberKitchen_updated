<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @*<title>@ViewBag.Title - CyberKitchen</title>*@
    <title>CYBERSPACE</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Cyber Kitchen", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                <img src="~/Images/Cyberspace.png" alt="logo" width="100" height="55" style="margin-bottom:10px" />         
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">


                    @if (User.IsInRole("Admin"))
                    {
                        <li>@Html.ActionLink("Staff Names", "index", "Voter")</li>
                        <li>@Html.ActionLink("Upload Staffs", "UploadVoters", "Voter")</li>
                        <li>@Html.ActionLink("Restaurants", "index", "Restaurant")</li>
                        <li>@Html.ActionLink("Rating", "index", "Rating")</li>
                        <li>@Html.ActionLink("SummaryReport", "index", "SummaryReport")</li>
                        @*<li>@Html.ActionLink("Amount to pay", "index", "AmountPrice")</li>*@
                        <li>@Html.ActionLink("SetUp Period", "index", "Period")</li>
                        @*<li>@Html.ActionLink("Daily Meal", "index", "Meal")</li>*@
                    }


                </ul>
                @Html.Partial("_LoginPartial")
            </div>

        </div>
    </div>

   
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year </p>
        </footer>
    </div>

   
    @RenderSection("Script", false)
    <script>
        $(function () {
            //Initiate Page Loader
            $("html").removeClass("loading");


            ///Application Successful
            var succ = $('#success').val();
            if (succ !== "" && succ !== null && succ !== undefined) {
                toastr.success(succ);
            }

            ///Registration Error
            var err = $('#error').val();
            if (err !== "" && err !== null && err !== undefined) {
                toastr.error(err);
            }

        });

    </script>
  
</body>
</html>




