@model Cyber_Kitchen.Models.VoterModel

@{
    ViewBag.Title = "EditVoter";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1 class="alert-info">EDIT VOTER</h1>
<div class="card-body" id="bar-parent">
    <form action="EditVoter" method="Post" id="form_sample_1" class="form-horizontal" >
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-body">
            <input type="hidden" name="VoterId" value="@Model.VoterId" />
           
            <div class="form-group row">
                <label class="control-label col-md-3">
                    Voter Name
                    <span ></span>
                </label>
                <div class="col-md-5">
                    @Html.TextBoxFor(m => m.StaffName, new { @class = "form-control input-height", placeholder = "enter voter name" })
                    @Html.ValidationMessageFor(m => m.StaffName, "", new { @class = "text-danger" })
                    @*@Html.HiddenFor(model => model.VoterId, new { htmlAttributes = new { @class = "form-control" } })*@
                </div>
            </div>
            <div class="form-group row">
                <label class="control-label col-md-3">
                    Staff No.
                    <span> </span>
                </label>
                <div class="col-md-5">
                    @Html.TextBoxFor(m => m.StaffNo, new { @class = "form-control input-height", placeholder = "enter staffno name" })
                    @Html.ValidationMessageFor(m => m.StaffNo, "", new { @class = "text-danger" })
                    @*@Html.HiddenFor(model => model.VoterId, new { htmlAttributes = new { @class = "form-control" } })*@
                </div>
            </div>
            <div class="form-group row">
                <label class="control-label col-md-3">
                    Email
                    <span></span>
                </label>
                <div class="col-md-5">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control input-height", placeholder = "enter staffno name" })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                    @*@Html.HiddenFor(model => model.VoterId, new { htmlAttributes = new { @class = "form-control" } })*@
                </div>
            </div>
            <div class="form-actions">
                <div class="row">
                    <div class="offset-md-3 col-md-6 pull-right">
                        <button type="submit" class="btn btn-info" id="submitData">Save</button>
                        @*<button type="button" class="btn btn-default">Cancel</button>*@
                    </div>
                </div>
            </div>
            <div class=" col-md-1">
                <a href="@Url.Action("Index","Voter", new { area = "" })" class="btn btn-chatpane">Back To List(s)</a>
            </div>
        </div>

    </form>
</div>


